{
  "train_batch_size": 128,
  "train_micro_batch_size_per_gpu": 2,
  "gradient_accumulation_steps": 64,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.0006,
      "betas": [0.9, 0.95],
      "eps": 1e-08,
      "weight_decay": 0.1
    }
  },
  "fp16": {
    "enabled": true,
    "auto_cast": true,
    "loss_scale": 0,
    "initial_scale_power": 12,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 1
  },
  "zero_optimization": {
    "stage": 1,
    "cpu_offload": false,
    "contiguous_gradients": true
  },
  "gradient_clipping": 1.0,
  "steps_per_print": 50,
  "wall_clock_breakdown": false
} 